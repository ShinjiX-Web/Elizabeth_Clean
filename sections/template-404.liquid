  <div class="relative w-full pb-12 xl:pt-24 xl:w-1/2 lg:pb-0">
    <div class="relative">
      <div class="absolute">
        <div class="">
          <h1 class="my-2 text-3xl font-bold text-transparent text-gray-900 bg-gradient-to-r from-violet-600 to-indigo-600 bg-clip-text">{{ 'general.404.title' | t }}</h1>
          <h2 class="my-2 text-2xl font-bold text-gray-800">
